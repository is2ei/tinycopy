{
  "name": "tinycopy",
  "version": "2.0.0",
  "description": "Tiny library for clipboard copy.",
  "author": "Yuichi Watanabe",
  "license": "MIT",
  "main": "dist/tinycopy.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/vvatanabe/tinycopy.git"
  },
  "babel": {
    "presets": [
      "es2015",
      "babel-preset-power-assert"
    ],
    "plugins": [
      "add-module-exports",
      "es6-promise"
    ]
  },
  "scripts": {
    "test": "mocha --require test/utils/dom.js --compilers js:babel-register test/**/test-*.js",
    "test-local": "zuul --debug --local 8080 -- test/**/test-*.js",
    "test-saucelabs": "zuul -- test/**/test-*.js",
    "build": "npm run build-lib && npm run build-dist && npm run build-minify",
    "build-dist": "browserify --debug --standalone TinyCopy lib/main.js -o dist/tinycopy.js",
    "build-minify": "uglifyjs dist/tinycopy.js -o dist/tinycopy.min.js",
    "build-lib": "babel src --out-dir lib",
    "cover": "babel-node $(npm bin)/isparta cover --report text --report html _mocha",
    "lint": "eslint src test",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-es6-promise": "^1.0.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-power-assert": "^1.0.0",
    "babel-register": "^6.9.0",
    "browserify": "^13.0.1",
    "es6-promise": "^3.2.1",
    "eslint": "^2.12.0",
    "isparta": "^4.0.0",
    "jsdom": "^9.2.1",
    "mocha": "^2.5.3",
    "power-assert": "^1.4.1",
    "uglify-js": "^2.6.2",
    "zuul": "^3.10.1"
  },
  "keywords": [
    "copy",
    "tiny",
    "clipboard"
  ],
  "dependencies": {
    "babel-cli": "^6.10.1",
    "brfs": "^1.4.3"
  }
}
